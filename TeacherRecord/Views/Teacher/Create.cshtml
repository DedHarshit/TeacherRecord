@model Teacher
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text text-light">New Student</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="TeacherId" class="p-0"></label>
            <input asp-for="TeacherId" class="form-control"></input>
            <span asp-validation-for="TeacherId" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control"></input>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Salary" class="p-0"></label>
            <input asp-for="Salary" class="form-control"></input>
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Teacher" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
            </div>

        </div>
    </div>
    @section scripts {
        @{
            <partial name="_ValidationScriptsPartial"></partial>
        }
    }
</form>